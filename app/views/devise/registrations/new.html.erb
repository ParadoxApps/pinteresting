<div class="container col-md-4 col-md-offset-4">
	<div class="panel panel-default">
		
		<div class="panel-heading">
			<h1 class="text-center">Sign up</h1>
		</div>

		<div class="panel-body">
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="form-group">
			  	<%= f.label :name %>
			  	<%= f.text_field :name, autofocus: true, class: "form-control input-lg" %>
				</div>

			  <div class="form-group">
			  	<%= f.label :email %>
			  	<%= f.email_field :email, class: "form-control input-lg" %>
				</div>

			  <div class="form-group">
			  	<%= f.label :password %>
			  	<%= f.password_field :password, class: "form-control input-lg" %>
				</div>

			  <div class="form-group">
			  	<%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
			  </div>
			<% end %>
		</div>	

		<div class="panel-footer">
			<%= render "devise/shared/links" %>
		</div>

	</div>
</div>